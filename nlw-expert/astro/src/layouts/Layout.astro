---
import { ViewTransitions } from "astro:transitions";


---

<html lang="pt-BR">
	<head>
		<meta charset="utf-8" />
		
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<meta name="viewport" content="width=device-width" />

		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
		
		<meta name="generator" content={Astro.generator} />
		
		<title>NLW Expert</title>

		<ViewTransitions />
	</head>
	<body>
        <slot />
	</body>
</html>

<style is:global>
	:root {
		font-family: "Inter", sans-serif;

		font-synthesis: none;
		text-rendering: optimizeLegibility;

		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;

		-webkit-text-size-adjust: 100%;
	}

	*, *::after, *::before {
		margin: 0;
		padding: 0;

		box-sizing: border-box;
	}

	html, body {
		width: 100%;
		height: 100%;
	}

	body {
		background-color: #0F172A;
	}

	main {
		max-width: 640px;
		
		margin: 0 auto 4rem;
		padding: 1.25rem;
	}


	#quiz {
		margin-bottom: .5rem;
	}

	.quiz-item {
		margin-top: 1.5rem;

		border: 1px solid #475569;
		border-radius: 6px;

		overflow: hidden;
	}

	.quiz-item h3 {
		padding: 1rem 1.25rem;
		color: #e2e8f0;

		display: flex;
		align-items: center;
		gap: .75rem;

		background-color: #1E293B;
	}

	.quiz-item h3::before {
		content: attr(data-id);

		background-color: #475569;

		border-radius: 50%;

		font-size: .75rem;

		width: 28px;
		height: 28px;

		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.quiz-item dl {
		padding: 1.25rem 1.5rem;

		display: grid;
		gap: .5rem;
	}

	.quiz-item dl dt {
		font-size: .875rem;
		line-height: 1.5rem;
		letter-spacing: 0;

		display: flex;
		align-items: center;
		gap: .5rem;

		color: #e2e3f0;
	}

	input {
		all: unset;

		border: 1px solid #94A3B8;
		border-radius: 50%;

		width: 1rem;
		height: 1rem;

		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	input:checked {
		border: 1px solid #A3E635;
	}

	input:checked::before {
		content: "";

		width: 10px;
		height: 10px;

		background-color: #A3E635;

		border-radius: 50%;
	}

	#right-answers {
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;

		text-align: center;

		background-color: #A3E635;

		padding: .75rem;
	}

	@media (max-width: 768px) {
		html {
			font-size: 87.5%;
		}
	}
</style>
